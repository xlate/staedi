                  <value>41</value>
                </enumeration>
              </element>
              <element position="2"/>
              <element position="3" title="Submitter Last or Organization Name"/>
              <element position="4"/>
              <element position="5"/>
              <element position="8"/>
              <element position="9"/>
            </sequence>
          </segment>
          <segment type="PER"/>
        </sequence>
      </loop>

      <loop code="1000B" type="L0001" discriminator="1">
        <sequence>
          <segment type="NM1" title="Receiver Name">
            <sequence>
              <element position="1" title="Entity Identifier Code (Receiver)">
